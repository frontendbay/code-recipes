---
const milestones = [
  { quarter: "01", title: "Building the collection of core recipies in JS, React and Vue", active: true },
  { quarter: "02", title: "Complex design patterns, architectures and industry best practices", active: false },
  { quarter: "03", title: "Interactive examples and demos for experimentation", active: false },
  { quarter: "04", title: "Community contributions and expansion", active: false },
];

const dotPositioning = "absolute md:relative z-10 bottom-20 md:bottom-5"
const dotSize = "size-3 md:size-5"
const dotStyle = "rounded-full bg-gray-700 ring-2"

const linePositioning = "absolute z-0 top-0 md:top-[3.65rem] left-[49%] md:left-0 w-2 md:w-full h-full md:h-2"
const stepCountStyle = "md:font-extralight text-center text-xs md:text-base text-orange-500 md:text-gray-400"
const contentBlock = "rounded bg-gray-700/80 md:bg-transparent"
const descriptionStyle = "text-gray-800/70 dark:text-gray-300/70 text-center font-medium w-fit p-1"

---

<div class="not-content">
  <div class="text-base pb-14 rounded-lg relative pt-20 md:pt-0">
    <div class="flex flex-col md:flex-row gap-16 md:justify-around">
      {milestones.map((milestone) => (
        <div class="flex flex-col items-center gap-1 md:gap-10 relative z-10 md:w-1/4">
          <div class="w-fit p-1" class:list={[stepCountStyle, contentBlock]}>{`Stage ${milestone.quarter}`}</div>
          <div class="flex flex-col items-center">
            <div class={`${milestone.active ? 'ring-orange-500' : 'ring-gray-600'}`} class:list={[dotPositioning, dotSize, dotStyle]} />
            <div class={`${milestone.active ? '!text-gray-800 dark:!text-gray-300' : ''}`} class:list={[contentBlock, descriptionStyle]}>{milestone.title}</div>
          </div>
        </div>
      ))}
    </div>
    <div class="rounded-full bg-gray-400 dark:bg-gray-800" class:list={[linePositioning]}></div>
  </div>
</div>